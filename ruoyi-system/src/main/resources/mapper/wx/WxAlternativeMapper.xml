<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.wx.mapper.WxAlternativeMapper">
    
    <resultMap type="WxAlternative" id="WxAlternativeResult">
        <result property="id"    column="id"    />
        <result property="trainee"    column="trainee"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectWxAlternativeVo">
        select id, trainee, teacher_id, status, create_time from wx_alternative
    </sql>

    <select id="selectWxAlternativeList" parameterType="WxAlternative" resultMap="WxAlternativeResult">
        <include refid="selectWxAlternativeVo"/>
        <where>  
            <if test="trainee != null "> and trainee = #{trainee}</if>
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectWxAlternativeById" parameterType="Long" resultMap="WxAlternativeResult">
        <include refid="selectWxAlternativeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertWxAlternative" parameterType="WxAlternative" useGeneratedKeys="true" keyProperty="id">
        insert into wx_alternative
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="trainee != null">trainee,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="trainee != null">#{trainee},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateWxAlternative" parameterType="WxAlternative">
        update wx_alternative
        <trim prefix="SET" suffixOverrides=",">
            <if test="trainee != null">trainee = #{trainee},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWxAlternativeById" parameterType="Long">
        delete from wx_alternative where id = #{id}
    </delete>

    <delete id="deleteWxAlternativeByIds" parameterType="String">
        delete from wx_alternative where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>